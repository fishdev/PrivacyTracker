{
	"manifest_version": 2,
	"name": "PrivacyTracker",
	"version": "0.3",
	"description": "A browser plugin to view and control tracking websites",
	"icons": {
		"16": "images/16.png",
		"32": "images/32.png",
		"48": "images/48.png",
		"64": "images/64.png",
		"128": "images/128.png",
		"256": "images/256.png",
		"512": "images/512.png"
	},
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },
	"permissions": [
                "background",
                "browsingData",
		"chrome://favicon/",
		"cookies",
		"history",
		"storage",
		"unlimitedStorage",
		"tabs",
		"webNavigation",
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_popup": "markup/popup.html",
		"default_title": "View and manage tracking services"
	}
}
